{
	"metadata": {
		"variables": {
			"ROOT_PATH": "/cephfs/home/karpov_d/selection_research",
			"MODELS_PATH": "{ROOT_PATH}/models",
			"NUM_TRAIN_EPOCHS": 5,
			"NAME": "rcb_terra_parus_russe",
			"SEQ_LEN": 128,
			"GRADIENT_ACC_STEPS": 1,
			"BATCH_SIZE": 32,
			"BACKBONE_MODEL": "DeepPavlov/rubert-base-cased", 
			"SEED": 42
		}
	},
	"dataset_reader": {
		"class_name": "multitask_reader",
		"path": "russian_super_glue",
		"reader_class_name": "huggingface_dataset_reader",
		"train": "train",
		"valid": "validation",
		"task_names": [
			"rcb",
			"terra",
			"parus",
			"russe"
		]
	},
	"dataset_iterator": {
		"class_name": "multitask_iterator",
		"num_train_epochs": "{NUM_TRAIN_EPOCHS}",
		"gradient_accumulation_steps": "{GRADIENT_ACC_STEPS}",
		"iterator_class_name": "huggingface_dataset_iterator",
		"label": "label",
		"sampling_mode": "plain",
		"use_label_name": false,
		"seed": 42,
		"tasks": {
			"rcb": {
				"features": ["premise", "hypothesis"]
			},
			"terra": {
				"features": ["premise", "hypothesis"]
			},
			"parus": {
				"features": ["premise", "choices"]
			},
			"russe": {
				"features": ["sentence1", "sentence2"]
			}
		}
	},
	"chainer": {
		"in": ["x_rcb", "x_terra", "x_parus", "x_russe"],
		"in_y": ["y_rcb", "y_terra", "y_parus", "y_russe"],
		"pipe": [{
				"class_name": "multitask_pipeline_preprocessor",
				"possible_keys_to_extract": [
					0,
					1
				],
				"preprocessors": ["TorchTransformersPreprocessor", "TorchTransformersPreprocessor", "TorchTransformersMultiplechoicePreprocessor", "TorchTransformersPreprocessor"],
				"vocab_file": "{BACKBONE_MODEL}",
				"max_seq_length": 128,
				"do_lower_case": false,
				"in": ["x_rcb", "x_terra", "x_parus", "x_russe"],
				"out": ["bert_features_rcb", "bert_features_terra", "bert_features_parus", "bert_features_russe"]
			},
			{
				"id": "multitask_bert",
				"class_name": "multitask_bert",
				"backbone_model": "{BACKBONE_MODEL}",
				"optimizer_parameters": {
					"lr": 2e-5
				},
				"gradient_accumulation_steps": "{GRADIENT_ACC_STEPS}",
				"learning_rate_drop_patience": 2,
				"learning_rate_drop_div": 2.0,
				"return_probas": true,
				"max_seq_len": "{SEQ_LEN}",
				"save_path": "{MODELS_PATH}/{NAME}",
				"load_path": "{MODELS_PATH}/{NAME}",
				"tasks": {
					"rcb": {
						"type": "classification",
						"options": 3
					},
					"terra": {
						"type": "classification",
						"options": 2
					},
					"parus": {
						"type": "multiple_choice",
						"options": 2
					},
					"russe": {
						"type": "classification",
						"options": 2
					}
				},
				"in": [
					"bert_features_rcb",
					"bert_features_terra",
					"bert_features_parus",
					"bert_features_russe"
				],
				"in_y": [
					"y_rcb",
					"y_terra",
					"y_parus",
					"y_russe"
				],
				"out": [
					"y_rcb_pred_probas",
					"y_terra_pred_probas",
					"y_parus_pred_probas",
					"y_russe_pred_probas"
				]
			},
			{
				"in": [
					"y_rcb_pred_probas",
					"y_terra_pred_probas",
					"y_parus_pred_probas",
					"y_russe_pred_probas"
				],
				"out": [
					"y_rcb_pred",
					"y_terra_pred",
					"y_parus_pred",
					"y_russe_pred"
				],
				"class_name": "proba2labels",
				"max_proba": true
			}
		],
		"out": [
			"y_rcb_pred_probas",
			"y_terra_pred_probas",
			"y_parus_pred_probas",
			"y_russe_pred_probas",
			"y_rcb_pred",
			"y_terra_pred",
			"y_parus_pred",
			"y_russe_pred"
		]
	},
	"train": {
		"epochs": "{NUM_TRAIN_EPOCHS}",
		"batch_size": "{BATCH_SIZE}",
		"metrics": [{
				"name": "multitask_accuracy",
				"inputs": [
					"y_rcb",
					"y_terra",
					"y_parus",
					"y_russe",
					"y_rcb_pred",
					"y_terra_pred",
					"y_parus_pred",
					"y_russe_pred"
				]
			},
			{
				"name": "accuracy",
				"alias": "accuracy_rcb",
				"inputs": [
					"y_rcb",
					"y_rcb_pred"
				]
			},
			{
				"name": "accuracy",
				"alias": "accuracy_terra",
				"inputs": [
					"y_terra",
					"y_terra_pred"
				]
			},
			{
				"name": "accuracy",
				"alias": "accuracy_parus",
				"inputs": [
					"y_parus",
					"y_parus_pred"
				]
			},
			{
				"name": "accuracy",
				"alias": "accuracy_russe",
				"inputs": [
					"y_russe",
					"y_russe_pred"
				]
			}
		],
		"validation_patience": 3,
		"val_every_n_epochs": 1,
		"log_every_n_epochs": 1,
		"show_examples": true,
		"evaluation_targets": [
			"valid", "train"
		],
		"class_name": "torch_trainer"
	}
}
